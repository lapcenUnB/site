---
import { alertas } from '~/admin';
---

<div
  class="text-white text-sm bg-secondary dark:bg-transparent dark:border-b dark:border-slate-900 dark:text-slate-400 hidden md:block overflow-hidden px-3 relative text-ellipsis whitespace-nowrap"
>
  {
    alertas.map((al) => {
      return (
        <div class="my-2">
          <span class="dark:bg-slate-700 bg-white/40 dark:text-slate-300 font-semibold px-1 py-0.5 text-xs mr-0.5 rtl:mr-0 rtl:ml-0.5 inline-block">
            {al.texto_destaque}
          </span>
          <a href={al.redireciona_para} class="text-muted hover:underline dark:text-slate-200 font-medium">
            {al.texto_conteudo}
          </a>
        </div>
      );
    })
  }
</div>
